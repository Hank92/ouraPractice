           <!-- LOCAL INFORMATION -->
            <div class="row">

       <% for(var i = issuetodayModels.length-1; i > -1 ; i--) { %>
            <a class="thumbnail" href="/issuetoday/<%= issuetodayModels[i].id %>">

                <img class="img-responsive" src="<%= issuetodayModels[i].image_url[0] || issuetodayModels[i].image_url[1] %>" alt="이미지 로딩중..."></br>
                <div class="text-center">
                  <h5><%= issuetodayModels[i].title %></h5>
                  <h7><%= issuetodayModels[i].posted.toLocaleDateString() %></h7>
                </div>
            </a>
       <% }%>
</div>
<% if (pageCount > 1) { %>  
<ul class="pagination">  
  <% if (currentPage > 1) { %>
      <li><a href="/issuetoday/?page=1">&laquo;</a></li>
  <% } %>
  <% var i = 1;
  if (currentPage > 5) {
  i = +currentPage - 4;
  } %>
  <% if (i !== 1) { %>
      <li class="disabled"><a href="#">...</a></li>
  <% } %>
  <% for (i; i<=pageCount; i++) { %>
    <% if (currentPage == i) { %>
        <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
    <% } else { %>
        <li><a href="/issuetoday/?page=<%= i %>"><%= i %></a></li>
    <% } %>
    <% if (i == (currentPage + 4)) { %>
        <li class="disabled"><a href="#">...</a></li>
    <% break; } %>
  <% } %>
  <% if (currentPage != pageCount) { %>
      <li><a href="/issuetoday/?page=<%= pageCount %>">&raquo;</a></li>
  <% } %>
</ul>  
<% } %> 

</div>
</div>



</body>
